
<div class="page-header">
  <h1>Degrees</h1>
</div>

<div class="row">
  <div class="col-md-6">
    <p><%= link_to 'New Degree', new_degree_type_path, class: "btn btn-primary" %></p>
  </div>
  <div class="col-md-6">
    <script src='http://www.google.com/jsapi'></script>
    <div id='chart2'></div>
    <%= render_chart @chart_phds, 'chart2' %>              
  </div>
</div>

<ul class="list-group">
  <% @degree_types.each do |degree_type| %>
    <li class="list-group-item">              
      <div class="row">
        <div class="col-sm-3">
          <%= link_to degree_type.degree_type_name, degree_type %>
        </div>
        <div class="col-sm-2">
          <span class="badge"><%= degree_type.degrees.size %></span>
        </div>
        <div class="col-sm-4">
          <%= degree_type.degree_type_notes %>
        </div>
        <div class="col-sm-3">
          <div class="btn-group pull-right">        
            <%= link_to 'Show', degree_type, class: "btn btn-default btn-xs" %>
            <%= link_to 'Edit', edit_degree_type_path(degree_type), class: "btn btn-default btn-xs" %>
            <%= link_to 'Delete', degree_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>
