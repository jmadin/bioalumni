<div class="page-header">
  <h1>Career records</h1>
</div>


<div class="row">
  <div class="col-md-6">
    <%= form_tag records_path, :method => :get do %>
      <div class="input-group">
  
          <%= text_field_tag :search, params[:search], placeholder: "Search thesis titles...", class: "form-control search" %>
        <span class="input-group-btn">
          <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
          <%= link_to 'Reset', careers_path, data: { no_turbolink: true }, class: "btn btn-default" %>
        </span>
      </div>
    <% end %>
  </div>
</div>

<hr>

<%= will_paginate @records %>

<ul class="list-group">
  <%= render @records %>
</ul>

<%= will_paginate @records %>
