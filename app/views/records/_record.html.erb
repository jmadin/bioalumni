<li class="list-group-item">              
  <div class="row">
    <div class="col-md-2">
      <% if @career || @records %>
        <%= link_to "#{record.alum.first_name} #{record.alum.last_name}", alum_path(record.alum) %>
      <% end %>
      <% if @alum %>
        <%= link_to record.career.career_name, career_path(record.career) %>
      <% end %>
    </div>
    <div class="col-md-2">
      <% if record.record_date %>
        <%= record.record_date.year %>
      <% else %>
        ?
      <% end %>
       - 
      <% if record.until_date %>
        <%= record.until_date.year %>
      <% else %>
        Present
      <% end %>
    </div>
    <div class="col-md-4">
      <%= record.position_title %>
      (<%= record.company_name %>)
    </div>
    <div class="col-md-2">
      <% if record.email.present? %>
        <%= mail_to record.email %>
      <% else %>
        <font style="color:lightgrey;">No email</font>
      <% end %>
    </div>
    <div class="col-md-2">
      <div class="btn-group pull-right">
        <% if @alum %>
          <%= link_to 'Show', record_path(record), class: "btn btn-xs btn-default" %>
        <% end %>
        <% if @career %>
          <%= link_to 'Show', record_path(record), class: "btn btn-xs btn-default" %>
        <% end %>
        <%= link_to 'Edit', edit_record_path(record), class: "btn btn-xs btn-default" %>
      </div>

    </div>
  </div>
</li>
