<% provide(:title, "Supervisors") %>

<div class="page-header">
  <h1>Supervisors</h1>
</div>

<ul class="list-group">
  <% @users.each do |user| %>
    <li class="list-group-item">              
      <div class="row">
        <div class="col-md-4">
          <%= link_to user.name, user %>
        </div>
        <div class="col-md-3">
          <%= user.email %>
        </div>
        <div class="col-md-1">
          <span class="badge"><%= user.degrees.size %></span>
        </div>
        <div class="col-md-1">
          <% if user.admin %>
            <span class="glyphicon glyphicon-ok-circle" style="color:green;"></span>
          <% end %>
        </div>
        <div class="col-md-3">
          <div class="btn-group pull-right">
            <%= link_to 'Show', user_path(user), class: "btn btn-xs btn-default" %>
            <% if current_user.admin && !current_user?(user) %>
              <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-xs btn-danger" %>
            <% end %>
          </div>
        </div>  
      </div>
    </li>
  <% end %>
</ul>