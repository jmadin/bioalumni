<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-6">
    <div class="page-header">
      <h1><%= @user.name %> <%= @user.surname %> <% if current_user == @user %><%= link_to 'Add Alumni', new_alum_path, class: 'btn btn-default btn-xs' %><% end %></h1>
    </div>

    <p>
      <%= mail_to @user.email %>
    </p>

    <p>
      <span class="badge"><%= @degrees.count %></span> degrees
    </p>
  </div>
  <div class="col-md-6">
    
    <% if @chart_phds %>
      <ul class="list-group">
        <li class="list-group-item">              
          <script src='http://www.google.com/jsapi'></script>
          <div id='chart2'></div>
          <%= render_chart @chart_phds, 'chart2' %>              
        </li>
      </ul>         
    <% end %>
  </div>
</div>

<%= render "user_degrees" %>

