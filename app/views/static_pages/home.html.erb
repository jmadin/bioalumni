<div class="row">
  <div class="col-md-10 col-md-offset-1">

    <div class="jumbotron">
      <h1>Oldfield<font style="color:orange;"></font></h1>

	    <% if signed_in? %>
		    <div class="row">
		      <div class="col-lg-6">
		        <%= form_tag photos_path, :method => 'get' do %>
		          <div class="input-group">
		            <%= text_field_tag :search, params[:search], :placeholder => "Search photos...", class: "form-control" %>
		            <span class="input-group-btn">
		              <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
		            </span>
		          </div>
		        <% end %>
		      </div>
		    </div>
		 	<% end %>
    </div>

  </div>
</div>  
