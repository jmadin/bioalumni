<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="row">
      <div class="col-md-6">

    		<%= render 'form' %>

        <br>

        <div class="btn-group">
          <%= link_to 'Show', @photo, class: "btn btn-default" %>
          <%= link_to 'Back', photos_path, class: "btn btn-default" %>
        </div>

      </div><br>
      <div class="col-md-6">
        
        <strong>Current photograph</strong><br>
        <%= image_tag @photo.photograph.url(:medium) %><br>
        <%= link_to "Download", image_path(@photo.photograph.url(:original)), class: "btn btn-default" %>

      </div>
    </div>
  </div>
</div>