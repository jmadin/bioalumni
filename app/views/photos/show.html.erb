<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="row">
      <div class="col-md-6">

        <h2><%= @photo.alum.first_name %> <%= @photo.alum.last_name %></h2>

      
        <p>
          <strong>Enterer:</strong>
          <%= @photo.user.name %> <%= @photo.user.surname %>
        </p>

        <p>
          <strong>Upload name:</strong>
          <%= @photo.photo_filename %>
        </p>

        <p>
          <strong>Taken:</strong>
          <%= @photo.photo_date %>
        </p>

        <p>
          <strong>Photograph notes:</strong>
          <%= @photo.photo_notes %>
        </p>

        <p>
          <strong>Tags:</strong>
          <%= raw @photo.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
        </p>

        <div class="btn-group">
          <%= link_to 'Edit', edit_photo_path(@photo), class: "btn btn-sm btn-default" %>
          <%= link_to 'Back', alum_path(@photo.alum), class: "btn btn-sm btn-default" %>
        </div>

      </div><br>
      <div class="col-md-6">
        <strong>Current upload:</strong><br>
        
        <% if @photo.photograph.content_type == 'application/pdf' %>
           <iframe src=<%= @photo.photograph.url(:original) %> frameborder="0", height="400px"></iframe>
        <% else %>
            <%= image_tag @photo.photograph.url(:medium) %>
        <% end %>
        <br><br>


        <%= link_to "Download", image_path(@photo.photograph.url(:original)), :target => "_blank", class: "btn btn-default" %>

      </div>
    </div>
  </div>
</div>
